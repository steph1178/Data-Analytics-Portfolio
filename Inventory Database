inventory = {'rope': 1, 'torch': 6}

while True:
    print('Enter inventory item name: (blank to quit)')
    itemName = input()
    if itemName =='':
        break
    else:
        print('How many ' + itemName + 's are you putting in the inventory?')
        numberItems = input()
        inventory[itemName] = numberItems

def displayInventory(inventory):
    print("Inventory:")
    item_total = 0
    for k, v in inventory.items():
        print(str(v) + ' ' + k)
        item_total += v
    print("Total number of items: " + str(item_total))

displayInventory(inventory)
